<resources>
    <style name="Hyperrail" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorPrimary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionMenuTextColor">@color/colorTextLight</item>

        <item name="actionModeBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/backgroundMaterialLight</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="NavigationStyle" parent="Widget.Design.NavigationView">
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="android:textColorSecondary">@color/colorTextDark</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="HyperrailAccentSearchContainer" parent="HyperrailAccentSearchField">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="HyperrailAccentSearchField" parent="Hyperrail">
        <item name="android:color">@color/colorTextLight</item>
        <item name="color">@color/colorTextLight</item>

        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textColorHint">@color/colorTextLight</item>

        <item name="colorAccent">@color/colorTextLight</item>

        <item name="android:spinnerDropDownItemStyle">@style/HyperrailAccentSearchSpinnerDropdown</item>
        <item name="android:editTextStyle">@style/HyperrailAccentSearchText</item>
    </style>

    <style name="HyperrailAccentSearchText">

        <item name="android:padding">0dp</item>

        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="android:background">@color/colorTextLight</item>

    </style>

    <style name="HyperrailAccentSearchAutocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@color/backgroundMaterialLight</item>
        <item name="colorControlNormal">@color/colorTextLight</item>
        <item name="colorControlActivated">@color/colorTextLight</item>
    </style>

    <style name="HyperrailAccentSearchSpinnerDropdown" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="colorControlNormal">@color/colorTextDark</item>
        <item name="colorControlActivated">@color/colorTextDark</item>
        <item name="colorControlHighlight">@color/colorTextDark</item>

        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TrainLongClickDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>