<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_train_status_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/cardlist_textrow_height"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginRight="@dimen/activity_small_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cardlist_textrow_secondary_textsizea"
        android:textAlignment="center"
        android:src="@android:drawable/stat_sys_warning"
        android:tint="@color/colorDelay" />

    <TextView
        android:id="@+id/text_train_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Canceled"
        android:textAlignment="center"
        android:textColor="@color/colorDelay"
        android:textSize="@dimen/cardlist_textrow_secondary_textsizea" />
</LinearLayout>